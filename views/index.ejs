<script src="http://mpa-tiles.craigmmills.com/javascripts/polymaps.js" type="text/javascript"></script>

<style type="text/css">
	.layer path {
	  fill: #003366;
	  stroke: #dee5ee;
	  fill-opacity: .7;
	}
	
</style>

<div class="map_container" >
  <div id="map" style="width: 100%; height: 600px"></div>
</div>
<script type="text/javascript">
  //Polygon stuff
    now.receiveAllPolygons = function(geoJsonArray){
        var layer = po.geoJson().features(geoJsonArray);
        map.add(layer);
    };

  var po = org.polymaps;

var map = po.map()
    .container(document.getElementById("map").appendChild(po.svg("svg")))
    .add(po.interact())
    .add(po.hash());

map.add(po.image()
    .url(po.url("http://{S}tile.cloudmade.com"
    + "/1a1b06b230af4efdbb989ea99e9841af" // http://cloudmade.com/register
    + "/998/256/{Z}/{X}/{Y}.png")
    .hosts(["a.", "b.", "c.", ""])));

map.add(po.compass()
    .pan("none"));

now.ready(function() {
    now.retrievePolygons();
});
</script>




